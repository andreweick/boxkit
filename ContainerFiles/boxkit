FROM quay.io/toolbx-images/alpine-toolbox:edge

LABEL com.github.containers.toolbox="true" \
      usage="This image is meant to be used with the toolbox or distrobox command" \
      summary="A cloud-native terminal experience" \
      maintainer="jorge.castro@gmail.com"

# Copy golang built for alpine
COPY --from=golang:1.24.4-alpine /usr/local/go/ /usr/local/go/

# Install current packages
RUN curl --proto '=https' --tlsv1.2 -LsSf https://setup.atuin.sh | sh
RUN sh <(curl -sS https://starship.rs/install.sh) -y
RUN curl -L https://fly.io/install.sh | sh

# Copy the setup scripts and package list
COPY ../scripts/boxkit.sh /
COPY ../scripts/distrobox-shims.sh /
COPY ../packages/boxkit.packages /
copy ../scripts/xterm-ghostty.tic /

# Run the setup scripts
RUN chmod +x boxkit.sh distrobox-shims.sh && /boxkit.sh

# [Install terminfo codes for ghostty](https://ghostty.org/docs/help/terminfo) after ncurses has been installed
RUN tic -x /xterm-ghostty.tic

# Cleanup
RUN rm /boxkit.sh /distrobox-shims.sh /boxkit.packages /xterm-ghostty.tic
